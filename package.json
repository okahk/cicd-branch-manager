{
	"name": "cicd-branch-manager",
	"version": "1.0.0",
	"description": "Automates CI/CD branch management with a 2-week cycle promotion strategy",
	"main": "cicd-branch-tool.js",
	"bin": {
		"git-cicd": "./cicd-branch-tool.js"
	},
	"scripts": {
		"dry-run": "node cicd-branch-tool.js --dry-run --config config.json --git ./git",
		"init": "node cicd-branch-tool.js --init --config config.json --git ./git",
		"start": "node cicd-branch-tool.js --run --config config.json --git ./git",
		"verify": "node cicd-branch-tool.js --verify --config config.json --git ./git"
	},
	"dependencies": {
		"commander": "^9.4.0",
		"date-fns": "^2.30.0",
		"simple-git": "^3.20.0"
	},
	"author": "",
	"license": "MIT"
}